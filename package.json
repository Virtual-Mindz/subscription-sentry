{
  "name": "subscription-sentry",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "validate-env": "tsx scripts/validate-production-env.ts",
    "test-db": "tsx scripts/test-database-connection.ts",
    "pre-deploy": "bash scripts/pre-deploy-check.sh",
    "kill-dev": "powershell -Command \"$ports = @(3000,3001,3002,3003,3004); foreach ($port in $ports) { $lines = netstat -ano | findstr :$port; if ($lines) { $lines -split '\\n' | ForEach-Object { if ($_ -match '\\s+(\\d+)$') { $pid = $matches[1]; Write-Host \\\"Killing PID $pid on port $port\\\"; taskkill /PID $pid /F } } } }\"",
    "dev-clean": "npm run kill-dev && npm run dev",
    "dev-reset": "npm run kill-dev && rmdir /s /q .next && npm install && npm run dev",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "prisma:seed": "tsx prisma/seed.ts",
    "migrate:data": "tsx scripts/migrate-data.ts",
    "migrate:verify": "tsx scripts/verify-migration.ts"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@clerk/nextjs": "^6.35.2",
    "@google/generative-ai": "^0.21.0",
    "@hookform/resolvers": "^5.2.0",
    "@next-auth/prisma-adapter": "^1.0.7",
    "@prisma/client": "^6.19.0",
    "@react-email/render": "^1.4.0",
    "@stripe/stripe-js": "^7.4.0",
    "@types/bcryptjs": "^2.4.6",
    "bcryptjs": "^3.0.2",
    "next": "15.4.1",
    "next-auth": "^4.24.11",
    "plaid": "^39.1.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.61.1",
    "react-hot-toast": "^2.6.0",
    "react-plaid-link": "^4.0.1",
    "recharts": "^3.4.1",
    "resend": "^4.6.0",
    "stripe": "^18.3.0",
    "zod": "^4.0.10"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.21",
    "dotenv": "^17.2.3",
    "dotenv-cli": "^11.0.0",
    "postcss": "^8.5.6",
    "prisma": "^6.19.0",
    "tailwindcss": "^3.4.0",
    "tsx": "^4.20.6",
    "typescript": "^5"
  }
}
